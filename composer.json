{
    "name": "nick-kh/laravel-components",
    "description": "Shared Laravel Blade components",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^12.0",
        "codeat3/blade-phosphor-icons": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "NickKh\\Components\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (file_exists(__DIR__ . '/package.json')) { system('npm install --prefix ' . __DIR__); }\""
        ],
        "post-update-cmd": [
            "@php -r \"if (file_exists(__DIR__ . '/package.json')) { system('npm install --prefix ' . __DIR__); }\""
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "NickKh\\Components\\ComponentsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
